<!-- Begin Login Bar -->
<div id="login">
  <% form_tag :action => 'login' do %>
    <br />
    <label for='username'>Username:</label>
    <%= text_field_tag 'username' %>
    <label for='password'>Password:</label>
    <%= password_field_tag 'password' %>
    <%= image_submit_tag 'login.png' %>
    <br />
    <br />
  <% end %>
</div>
<!-- End Login Bar -->
